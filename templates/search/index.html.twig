{% extends 'base.html.twig' %}

{% block title %}Search{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row mb-5">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                        {{ form_row(form.query) }}
                        {{ form_row(form.createdThisMonth) }}
                        <button class="btn btn-primary" id="submit">Submit</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                {% if query is not empty %}
                    <h1>RÃ©sultats de la recherche pour "{{ query }}"</h1>
                    <hr>
                    <ul>
                        {% for result in results %}
                            <li>{{ result.title }} ({{ result.category }})</li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
